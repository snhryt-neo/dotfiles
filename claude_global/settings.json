{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  
  "permissions": {
    "deny": [
      // SSH/AWS/環境変数
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(./secrets/**)",
      
      // Google Cloud関連
      "Read(~/.config/gcloud/**)",
      "Read(**/*application_default_credentials.json)",
      "Read(**/*service-account*.json)",
      "Read(**/*gcp*.json)",
      "Read(**/.gcp/**)",
      "Read(**/credentials.json)",
      
      // 危険なファイル操作
      "Bash(rm -rf *)",
      "Bash(rm -rf .)",
      "Bash(rm -rf /)",
      
      // Git致命的操作
      "Bash(git rm -rf *)",
      "Bash(git rm -r *)",
      "Bash(git reset --hard*)",
      "Bash(git clean -fd*)",
      "Bash(gh repo delete*)",
      "Bash(gh api -X DELETE*)",
      
      // 外部通信
      "WebFetch"
    ],
    
    "ask": [
      // 確認が必要なGit操作
      "Bash(git push --force*)",
      "Bash(git push -f*)",
      "Bash(git push --force-with-lease*)",
      "Bash(git branch -D*)",
      "Bash(git tag -d*)",
      "Bash(git rebase*)",
      "Bash(git cherry-pick*)",
      "Bash(git reset*)"
    ],
    
    "defaultMode": "default"
  },
  
  "model": "claude-sonnet-4-5-20250929",
  "cleanupPeriodDays": 30,
  "includeCoAuthoredBy": true
}
